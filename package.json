{
  "name": "weather-card",
  "private": true,
  "workspaces": ["apps/*"],
  "scripts": {
    "dev": "npm run dev -w apps/web",
    "build": "npm run build -w apps/web",
    "worker:dev": "npm run dev -w apps/worker",
    "worker:deploy": "npm run deploy -w apps/worker",
    "db:migrate:local": "wrangler d1 migrations apply weather-card-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply weather-card-db --remote",
    "gen:slugs": "npx tsx scripts/gen-city-slugs.ts"
  }
}
