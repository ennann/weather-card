---
interface Props {
  title?: string;
}
const { title = 'Weather Cards' } = Astro.props;
const currentPath = Astro.url.pathname;
---
<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  </head>
  <body class="min-h-screen bg-neutral-950 text-neutral-100">
    <nav class="sticky top-0 z-50 border-b border-neutral-800/60 bg-neutral-950/70 backdrop-blur-xl">
      <div class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4">
        <a href="/" class="font-display text-xl tracking-tight text-accent">
          Weather Cards
        </a>
        <div class="flex gap-8 text-sm font-medium">
          <a
            href="/"
            class:list={[
              'transition-colors',
              currentPath === '/' ? 'text-neutral-100' : 'text-neutral-500 hover:text-neutral-300',
            ]}
          >
            Gallery
          </a>
          <a
            href="/logs"
            class:list={[
              'transition-colors',
              currentPath === '/logs' ? 'text-neutral-100' : 'text-neutral-500 hover:text-neutral-300',
            ]}
          >
            Logs
          </a>
        </div>
      </div>
    </nav>
    <main class="mx-auto max-w-7xl px-6 py-10">
      <slot />
    </main>
  </body>
</html>

<style>
  @import '../styles/global.css';
</style>
